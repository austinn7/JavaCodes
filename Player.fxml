<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="audioviz.PlayerController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            </items>
          </Menu>
          <Menu fx:id="visualizersMenu" mnemonicParsing="false" text="Visualizers" />
            <Menu fx:id="bandsMenu" mnemonicParsing="false" text="Bands" />
        </menus>
      </MenuBar>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="mainFxmlClass">
          <stylesheets>
              <URL value="@player.css" />
          </stylesheets>
         <children>
            <Button fx:id="playPause" layoutX="93.0" layoutY="22.0" mnemonicParsing="false" onAction="#handlePlayPause" prefHeight="27.0" prefWidth="65.0" text="Play" />
            <Text fx:id="lengthText" layoutX="80.0" layoutY="119.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="140.0" />
            <Label layoutX="34.0" layoutY="106.0" text="Length:" />
            <Label layoutX="330.0" layoutY="106.0" text="Time:" />
            <Text fx:id="currentText" layoutX="361.0" layoutY="118.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="179.0" />
            <AnchorPane fx:id="vizPane" layoutX="15.0" layoutY="149.0" prefHeight="352.0" prefWidth="771.0" />
            <Text fx:id="errorText" fill="RED" layoutX="25.0" layoutY="592.0" strokeType="OUTSIDE" strokeWidth="0.0" />
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" layoutX="25.0" layoutY="203.0" />
            <Text fx:id="filePathText" layoutX="35.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="732.0" />
            <Text fx:id="visualizerNameText" layoutX="340.0" layoutY="559.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Text>
            <Label layoutX="36.0" layoutY="71.0" text="Bands:" />
            <Text fx:id="bandsText" layoutX="80.0" layoutY="85.0" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Slider fx:id="timeSlider" layoutX="329.0" layoutY="67.0" onMouseDragged="#handleTimeSliderMouseDragged" onMousePressed="#handleSliderMousePressed" onMouseReleased="#handleSliderMouseReleased" prefHeight="25.0" prefWidth="242.0" />
            <Button layoutX="31.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            <Slider fx:id="volumeSlider" layoutX="589.0" layoutY="73.0" onMouseReleased="#handleVolumeSliderMouseReleased" />
            <Label layoutX="588.0" layoutY="106.0" text="Volume:" />
            <Text fx:id="volumeText" layoutX="640.0" layoutY="119.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="88.66668701171875" />
         </children>
      </AnchorPane>
   </children>
</VBox>
